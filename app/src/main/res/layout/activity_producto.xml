<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".ProductoActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewNombreAP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOMBRE"/>
    <TextView
        android:id="@+id/textViewPrecioAP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRECIO"/>

    <TextView
        android:id="@+id/textViewDetalleeAP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DETALLE"/>

    <ImageView
        android:id="@+id/imageViewPerdilAP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/textViewDetalleeAP"
        app:srcCompat="@drawable/ic_launcher_background"/>
</LinearLayout>